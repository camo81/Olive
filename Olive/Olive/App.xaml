<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Olive.App">
  <Application.Resources>
    <!-- Application resource dictionary -->
    <ResourceDictionary>
      <Style x:Key="MissLabel" TargetType="Label">
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontFamily" Value="IMissYourKiss.ttf#IMissYourKiss" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalOptions" Value="Center" />
      </Style>     
      
      <Style x:Key="DefLabelRoboto" TargetType="Label">
        <Setter Property="FontFamily" Value="Roboto-Regular.ttf#Roboto-Regular" />
      </Style>
      
      <Style x:Key="MasterDetailLb2" TargetType="Label">
        <Setter Property="FontSize" Value="17" />
        <Setter Property="Margin" Value="10,5,5,5" />
        <Setter Property="FontFamily" Value="Roboto-Regular.ttf#Roboto-Regular" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
      </Style>
      
      <Style x:Key="buttonStyle" TargetType="Button">
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="BorderColor" Value="#0E2C14" />
        <Setter Property="BorderRadius" Value="5" />
        <Setter Property="BorderWidth" Value="5" />
        <Setter Property="WidthRequest" Value="200" />
        <Setter Property="TextColor" Value="#" />
        <Setter Property="FontFamily" Value="Roboto-Regular.ttf#Roboto-Regular" />        
      </Style>
      
      <Style x:Key="buttonOnlyIcon" TargetType="Button">
        <Setter Property="BorderColor" Value="#fff" />
        <Setter Property="WidthRequest" Value="60" />
        <Setter Property="HeightRequest" Value="60" />
        <Setter Property="BorderRadius" Value="30" />
        <Setter Property="HorizontalOptions" Value="End" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="FontFamily" Value="Roboto-Regular.ttf#Roboto-Regular" />
        <Setter Property="BackgroundColor" Value="#0E2C14" />        
      </Style>
      
      <Style x:Key="MasterDetailButton" TargetType="Button">
        <Setter Property="HorizontalOptions" Value="StartAndExpand" />
        <Setter Property="BorderColor" Value="#fff" />
        <Setter Property="BorderRadius" Value="0" />
        <Setter Property="BorderWidth" Value="0" />
        <Setter Property="TextColor" Value="#757575" />
        <Setter Property="BackgroundColor" Value="#fff" />
        <Setter Property="FontSize" Value="17" />        
        <Setter Property="FontFamily" Value="Roboto-Regular.ttf#Roboto-Regular" />
        <Setter Property="Margin" Value="0,0,0,0" />
      </Style>
      
      <Style x:Key="MasterDetailSL1" TargetType="StackLayout">
        <Setter Property="HeightRequest" Value="200" />
        <Setter Property="BackgroundColor" Value="#0E2C14" />
      </Style>


      <Style x:Key="MasterDetailSL2" TargetType="StackLayout">
        <Setter Property="HorizontalOptions" Value="Fill" />
        <Setter Property="Padding" Value="40,0,0,0" />
      </Style>

      <Style x:Key="MasterDetailSL3" TargetType="StackLayout">
        <Setter Property="HorizontalOptions" Value="Fill" />
        <Setter Property="Padding" Value="20,0,0,0" />
      </Style>

      <Style x:Key="MasterDetailSLMain" TargetType="StackLayout">
        <Setter Property="Padding" Value="40,40,40,20" />
        <Setter Property="BackgroundColor" Value="#fff" />
      </Style>

      <Style x:Key="MasterDetailSVMain" TargetType="ScrollView">
        <Setter Property="Padding" Value="15,15,15,15" />
        <Setter Property="BackgroundColor" Value="#e3e3e7" />
      </Style>
      

      <Style x:Key="MasterDetailLb1" TargetType="Label">
        <Setter Property="FontSize" Value="110" />
        <Setter Property="VerticalOptions" Value="CenterAndExpand" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="FontFamily" Value="IMissYourKiss.ttf#IMissYourKiss" />
        <Setter Property="Margin" Value="40,10,40,40" />        
      </Style>
      
      <Style x:Key="SettingsEntry" TargetType="Entry">
        <Setter Property="Margin" Value="0,0,0,10" />
        <Setter Property="FontFamily" Value="Roboto-Regular.ttf#Roboto-Regular" />
        <Setter Property="WidthRequest" Value="225" />
      </Style>

      <Style x:Key="LanguagePicker" TargetType="Picker">
        <Setter Property="Margin" Value="0,0,0,10" />
      </Style>

      <Style x:Key="DescriptionLabel" TargetType="Label">
        <Setter Property="Margin" Value="0,0,0,40" />
        <Setter Property="FontFamily" Value="Roboto-Regular.ttf#Roboto-Regular" />
      </Style>

      <Style x:Key="toolbarSecondary" TargetType="ToolbarItem">
      
      </Style>
      

    </ResourceDictionary>
  </Application.Resources>
</Application>
