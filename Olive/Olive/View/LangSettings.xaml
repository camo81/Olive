<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Olive.View.LangSettings">
  <ScrollView>
    <StackLayout>
      <Picker x:Name="Langslection" SelectedIndex="{Binding LangSet}" HorizontalOptions="FillAndExpand" 
              Title="Select language" ItemsSource="{Binding Lingue}" ItemDisplayBinding="{Binding languageName}"
              SelectedItem="{Binding LangSelected}">
      </Picker>
      <!-- <Label Text="{Binding LangSelected.langCode}" /> -->
      <Label TextColor="#77d065" FontSize = "20" Text="{ Binding OpStatus }" />
      <Button x:Name = "buttonIns" Text="salva" Command="{Binding SaveLanguage}" />
      
    </StackLayout>
  </ScrollView>
</ContentPage>